---
import { Image } from "astro:assets";
import testImg from "@/assets/images/brief/meetings-1.jpg";

type Props = {
  title: string;
  slug: string;
  date?: Date;
  category?: "meeting" | "news" | "initiative";
};

const { title, category = "news", date = new Date() } = Astro.props;
---

<article class="card h-full border">
  <figure class="relative">
    <Image src={testImg} alt="" class="aspect-video w-full object-cover" />
    {
      category && (
        <span
          set:text={category}
          class="badge badge-neutral absolute right-2 top-2 capitalize"
        />
      )
    }
  </figure>
  <div class="card-body">
    <time datetime={date.toLocaleDateString()} class="text-sm"
      >{
        date.toLocaleDateString(Astro.currentLocale, { dateStyle: "medium" })
      }</time
    >
    <h2 set:text={title} class="mb-2 line-clamp-3 text-base" />
    <div class="card-actions mt-auto">
      <a href="/" class="btn btn-outline btn-primary btn-sm max-sm:btn-block">
        Read Article â†’
      </a>
    </div>
  </div>
</article>
